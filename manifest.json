{
  "manifest_version": 3,
  "name": "sonar-mv3-proto",
  "description": "A chromium plugin based on openCV for visually impaired people",
  "version": "1.1.0",
  "options_page": "./src/option/option.html",
  "background": {
    "service_worker": "./src/background/background.js"
  },
  "action": {
    "default_icon": {
      "16": "./asset/icon/icon-16.png",
      "32": "./asset/icon/icon-32.png",
      "48": "./asset/icon/icon-48.png"
    },
    "default_title": "Sonar"
  },
  "icons": {
    "16": "./asset/icon/icon-16.png",
    "32": "./asset/icon/icon-32.png",
    "48": "./asset/icon/icon-48.png",
    "64": "./asset/icon/icon-64.png",
    "128": "./asset/icon/icon-128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "scripting",
    "desktopCapture",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "/src/handler/handler.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "sandbox": "sandbox allow-scripts; script-src 'self' 'unsafe-eval';"
  },
  "sandbox": {
    "pages": [
      "src/sandbox/sandbox.html"
    ]
  }
}