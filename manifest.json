{
  "manifest_version": 3,
  "name": "sonar-mv3-proto",
  "description": "A chromium plugin based on openCV for visually impaired people",
  "version": "1.0.0",
  "options_page": "./src/option/option.html",
  "background": { "service_worker": "./src/background/background.js" },
  "action": {
    "default_popup": "./src/popup/popup.html",
    "default_icon": {
      "16": "./asset/icon/icon-16.png",
      "32": "./asset/icon/icon-32.png",
      "48": "./asset/icon/icon-48.png"
    }
  },
  "icons":{
    "16": "./asset/icon/icon-16.png",
    "32": "./asset/icon/icon-32.png",
    "48": "./asset/icon/icon-48.png",
    "64": "./asset/icon/icon-64.png",
    "128": "./asset/icon/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["./src/inject/inject.js"]
    }
  ]
}